{
  "name": "posts-app",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "npm": ">=10.2.3",
    "node": ">=20.10.0"
  },
  "scripts": {
    "dev": "cp .env.development .env.local && next dev",
    "build": "cp .env.production .env.local && next build",
    "start": "next start -p 8081",
    "type-check": "tsc --noemit",
    "prepare": "husky install",
    "lint": "npm run type-check && next lint --max-warnings=1 --fix",
    "test": "jest --ci --reporters=default --reporters=jest-junit --coverage",
    "test-update": "jest --updateSnapshot",
    "test-watch": "jest --watch"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.7",
    "classnames": "^2.3.2",
    "intersection-observer": "^0.12.2",
    "next": "14.0.3",
    "react": "^18",
    "react-dom": "^18",
    "react-intersection-observer": "^9.5.3",
    "react-redux": "^8.1.3",
    "sharp": "^0.33.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/testing-library__jest-dom": "^6.0.0",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.0.3",
    "eslint-plugin-unused-imports": "^3.0.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "msw": "^1.3.1",
    "postcss": "^8",
    "postcss-import": "^15.1.0",
    "sass": "^1.69.5",
    "tailwindcss": "^3.3.0",
    "typescript": "^5",
    "whatwg-fetch": "^3.6.19"
  },
  "browserslist": [
    "last 2 versions",
    "IE >= 11"
  ],
  "peerDependencies": {
    "postcss": "^8.4.21"
  }
}
